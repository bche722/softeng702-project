<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:onClick="onBadClicku"
    tools:context=".NumpadActivity">

    <LinearLayout
        android:id="@+id/alpha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_light"
        android:onClick="onBadClicku"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35000002">

        <TextView
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onBadClicku"
            android:text="@string/numpad_query"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/numField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:hint="• • • • • • • • • •"
            android:onClick="onBadClicku"
            android:textColor="@android:color/black"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onBadClicku"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="1"
                android:textSize="@dimen/numkey_text" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="2"
                android:textSize="@dimen/numkey_text" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="3"
                android:textSize="@dimen/numkey_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"

            android:gravity="center"
            android:onClick="onBadClicku"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="4"
                android:textSize="@dimen/numkey_text" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="5"
                android:textSize="@dimen/numkey_text" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="6"
                android:textSize="@dimen/numkey_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"
            android:gravity="center"

            android:onClick="onBadClicku"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="7"
                android:textSize="@dimen/numkey_text" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="8"
                android:textSize="@dimen/numkey_text" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="9"
                android:textSize="@dimen/numkey_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/numkey_vertical_margins"
            android:gravity="center"

            android:onClick="onBadClicku"
            android:orientation="horizontal">

            <Button
                android:id="@+id/goBtn"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded_green"
                android:onClick="onStartClicku"
                android:text="Go"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="@dimen/numkey_side_margins"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded"
                android:onClick="onClicku"
                android:text="0"
                android:textSize="@dimen/numkey_text" />


            <Button
                android:id="@+id/endBtn"
                android:layout_width="@dimen/numkey_size"
                android:layout_height="@dimen/numkey_size"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:background="@drawable/button_rounded_red"
                android:onClick="onFinishClicku"
                android:text="End"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>